{

	"id": "fish",
	"name": "Fish",
	"version": "1.0.1",

	"texture": "fish.png",

	"tileset": {

		"body": {
			"default": { "x": 1, "y": 0,  "h": 3 },
			"north": { "w": 1 },
			"south": { "w": 1 },
			"east" : { "w": 5 },
			"west" : { "w": 5, "t": { "flipX": true } },
			"up": { "w": 5, "h": 1, "t": { "rotate": 1 } },
			"down": { "y": 2, "w": 5, "h": 1, "t": { "rotate": 1 } }
		},

		"fin": {
			"default": { "x": 1, "y": 0, "w": 2, "h": 1 }
		},

		"pelvic-fin": {
			"default": { "x": 0, "y": 0, "w": 1, "h": 1 }
		},

		"tail": {
			"default": { "x": 0, "y": 0, "w": 3, "h": 2 },
			"west": { "t": { "flipX": true } }
		}

	},

	"armature": {
		"root": {
			"cubes": [

				{
					"size": [ 1, 3, 5 ],
					"faces": "body"
				},

				{
					"size": [ 0, 2, 2 ],
					"offset": [ 0, 1.5, 0 ],
					"faces": "fin"
				},

				{
					"size": [ 0, 2, 1 ],
					"offset": [ 0.25, -1.5, 0 ],
					"faces": "pelvic-fin"
				},
				{
					"size": [ 0, 2, 1 ],
					"offset": [ -0.25, -1.5, 0 ],
					"faces": "pelvic-fin"
				},

				{
					"size": [ 0, 1, 2 ],
					"offset": [ 0.75, 0, 0.5 ],
					"rotation": [ 0, 15, 0 ],
					"faces": "fin"
				},
				{
					"size": [ 0, 1, 2 ],
					"offset": [ -0.75, 0, 0.5 ],
					"rotation": [ 180, 15, 0 ],
					"faces": "fin"
				},

				{
					"size": [ 0, 2, 3 ],
					"offset": [ 0, 0, 3 ],
					"faces": "tail"
				}

			]
		}
	},

	"actions": {

		"INIT": "./scripts/init.js",
		"UPDATE": "./scripts/update.js",

		"COLLIDE": "./scripts/collide.js",

		"MOVE_FORWARD": "./scripts/move-forward.js",
		"ROTATE_LEFT": "./scripts/rotate-left.js",
		"ROTATE_RIGHT": "./scripts/rotate-right.js",

		"SPEED": "./scripts/speed.js"

	},

	"bindings": {

		"MOVE_FORWARD": [
			"KEY_HELD_W",
			"GAMEPAD_LSTICK_NORTH"
		],

		"ROTATE_LEFT": [
			"KEY_HELD_A",
			"GAMEPAD_LSTICK_WEST"
		],

		"ROTATE_RIGHT": [
			"KEY_HELD_D",
			"GAMEPAD_LSTICK_EAST"
		],

		"SPEED": [
			"KEY_HELD_SPACE",
			"GAMEPAD_BUTTON_WEST"
		]

	}

}
